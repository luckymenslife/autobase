    </Style>
    <Style x:Key="NotificationItemStyle"
               TargetType="ListBox">
        <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
        <Setter Property="Padding"
                    Value="2, 0, 2, 0" />
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border 
                        Margin="0"
                        HorizontalAlignment="Stretch"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        Background="{Binding PriorityRef, Converter={StaticResource PriorityToColorBrushConverter}}">
                        <Border.Resources>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Read}" Value="False">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Read}" Value="True">
                                        <Setter Property="FontWeight" Value="Normal"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Resources>
                        <Grid 
                            Margin="3,3,3,0"
                            HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <DockPanel 
                                Grid.Row="0"
                                Margin="0,0,0,2"
                                HorizontalAlignment="Stretch">
                                <Image
                                    Height="16"
                                    Width="16"
                                    Margin="0,0,5,0"
                                    Source="/zNotificationPlugin;component/images/iconmonstr-email-2-icon-16.png"
                                    Visibility="{Binding Read, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanVisibilityConverter},
                                    ConverterParameter=Reverse}"/>
                                <CheckBox
                                    Style="{StaticResource StyleFavoriteCheckBox}"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding Favorite}"
                                    Height="18"
                                    Width="18"/>
                                <TextBlock
                                    Margin="15,0,0,0"
                                    Text="{Binding TypeRef.Name}"/>
                                <StackPanel
                                    Orientation="Horizontal"
                                    DockPanel.Dock="Right"
                                    HorizontalAlignment="Right">
                                    <TextBlock
                                        Text="{Binding Notification.Subject}"/>
                                    <TextBlock
                                        Margin="10,0,10,0"
                                        Text="{Binding Notification.Created, StringFormat=dd.MM.yyyy HH:mm:ss}"/>
                                </StackPanel>
                            </DockPanel>
                            <Separator 
                               Margin="5,0,5,0"
                               VerticalAlignment="Bottom"
                               Grid.Row="0"
                               Background="#FF8F8989"
                               Foreground="Black"/>
                            <Grid 
                                Grid.Row="1"
                                Margin="0,0,0,2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Grid.Row="0"
                                        Grid.ColumnSpan="2"
                                        Text="{Binding Notification.Message}"
                                        TextWrapping="WrapWithOverflow"
                                        VerticalAlignment="Center"/>
                                    <!--<ToggleButton
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        x:Name="SridChangeButton"
                                        VerticalContentAlignment="Center"
                                        Margin="15,2,2,0"
                                        Command="{Binding ReadNotificationCmd}"
                                        IsChecked="{Binding ElementName=SridChangePopup, Path=IsOpen, Mode=TwoWay}"
                                        Style="{StaticResource SridChangeButtonStyle}">
                                    </ToggleButton>-->
                                    <Popup
                                        PopupAnimation="Slide"
                                        x:Name="SridChangePopup"
                                        AllowsTransparency="True"
                                        PlacementTarget="{Binding ElementName=SridChangeButton}"
                                        StaysOpen="False"
                                        Placement="Bottom">
                                        <views:NotificationV DataContext="{Binding Notification}"/>
                                    </Popup>
                                </Grid>

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Visibility="{Binding IsExistsRefObj, Converter={StaticResource BooleanVisibilityConverter}}"
                                    Text="Перейти к:"/>
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Visibility="{Binding IsExistsRefObj, Converter={StaticResource BooleanVisibilityConverter}}">
                                    <Hyperlink Command="{Binding OpenRefLinkCmd}">
                                        <TextBlock Text="{Binding Notification.RefObj.Name}"></TextBlock>
                                    </Hyperlink>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListBoxItem">
                    <Setter Property="SnapsToDevicePixels"
                                Value="true" />
                    <Setter Property="OverridesDefaultStyle"
                                Value="true" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="{TemplateBinding Panel.Background}"
                                            BorderThickness="1.5"
                                            Name="Border"
                                            Padding="0.5"
                                            SnapsToDevicePixels="true">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected"
                                                 Value="true">
                                        <Setter TargetName="Border"
                                                    Property="BorderBrush"
                                                    Value="Blue" />
                                        <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#3D26A0DA" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>